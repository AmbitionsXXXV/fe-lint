{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": ["src"]
}
